<h1>All Articles</h1>

<ul id="articles">
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article_path(article), class: 'article_title', id: "article_#{article.id}" %>
    </li>
    <li>
      <%= link_to "delete article", article_path(article), method: :delete, data: {confirm: "Really delete the article?"} %>
    </li>
  <% end %>
</ul>

<p><%= link_to "create a new article", new_article_path, class: 'new_article'  %></p>
